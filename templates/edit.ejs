<%- include('layout/header'); -%>



	<div class="container">

		<form method="post" action="/todo/edit/<%= todo._id  %> ">
			<div class="mt-3 mb-3">
				<label class="form-label">Todo Name</label>

				<input type="text" name="name" placeholder="Edit TODO name" class="form-control"
					value="<%=todo.name %>" >

			</div>
			<div class="mb-3">
				<label class="form-label">Todo Body</label>

				<textarea name="description" placeholder="Edit description" class="form-control"> <%= todo.body %> </textarea>
			</div>

			<button type="submit" class="btn btn-primary">Save Changes</button>
		</form>


	</div>



	<%- include('layout/footer'); -%>